{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"command": "git clean -ff -X -d",
			"label": "clean"
		},
		{
			"type": "shell",
			"command": "haxe --run RunSetup",
			"label": "setup",
			"dependsOn":["clean"]
		},
		{
			"type": "shell",
			"command": "haxe tests.hxml",
			"problemMatcher": [
				"$haxe-absolute",
				"$haxe",
				"$haxe-error",
				"$haxe-trace"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"label": "tests",
			"dependsOn":["setup"]
		}
	]
}